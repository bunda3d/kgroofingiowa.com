{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true
		}
	},
	"env": {
		"browser": true
	},
	"extends": ["google", "prettier", "plugin:prettier/recommended"],
	"rules": {
		"react/prop-types": "off",
		"react/jsx-filename-extension": [1, { "extensions": [".js"] }],
		"prettier/prettier": "error"
	},
	"plugins": ["prettier"]
}
